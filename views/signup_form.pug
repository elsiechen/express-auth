extends layout 
block content 
    
        section.vh-100.bg-image(style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');")
            div.mask.d-flex.align-items-center.h-100.gradient-custom-3
                div.container.h-100
                div.row.d-flex.justify-content-center.align-items-center.h-100
                    div.col-12.col-md-9.col-lg-7.col-xl-6
                        div.card(style="border-radius: 15px;")
                            div.card-body.p-5
                            h2.text-uppercase.text-center.mb-5 Create an account

                            form(method='POST', action='')
                                div.form-outline.mb-4
                                    input.form-control.form-control-lg#name(type="text", 
                                        value=(user===undefined?'':user.username))
                                    label.form-label(for="name") Your Name
                                        
                                    div.form-outline.mb-4
                                        input.form-control.form-control-lg#name(type="email",
                                            value=(user===undefined?'':user.email))
                                        label.form-label(for="email") Your Email
                                        
                                    div.form-outline.mb-4
                                        input.form-control.form-control-lg#name(type="password")
                                        label.form-label(for="password") Your Password

                                    div.form-check.d-flex.justify-content-center.mb-5
                                        input.form-check-input.me-2#terms(type="checkbox" value="")
                                        label.form-check-label(for="terms") I agree all statements in 
                                            a.text-body(href="#!")
                                                u Terms of service 
                                        
                                    div.d-flex.justify-content-center
                                        button.btn.btn-success.btn-block.btn-lg.gradient-custom-4.text-body(type="submit") Register
                                            
                                    p.text-center.text-muted.mt-5.mb-0 Have already an account? 
                                        a.fw-bold.text-body(href="/user/login")
                                            u Login here

        if errors 
            ul 
                for error in errors
                    li!=error.msg                            
                       